<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!-- it is the allocated place for each and every question must adopt this strategy -->
<style name="question_place_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">10dp</item>
</style>

    <!-- all the questions will must adopt this strategy -->
    <style name="question_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearanceLarge">?android:textAppearanceLarge</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- radio group questions will adopt this strategy -->
    <style name="question_radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--radio buttons in their respective linear layouts will follow the strategy -->
    <style name="radio_group_linear_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <!-- check box questions will adopt this strategy -->

    <style name="checkbox_group_linear_layout_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <!--check box in their respective linear layouts will follow the strategy -->
    <style name="question_checkbox_style">
        <item name="android:layout_weight">1</item>
        <item name="android:checkboxStyle">@style/Widget.AppCompat.CompoundButton.CheckBox</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>



</resources>
